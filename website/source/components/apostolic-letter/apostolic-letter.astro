---
import { Language } from '@catechism-types';

import { AuthorText, Body, getLetter, Intro, Subtitle, Title } from './components';

interface Props {
    language: Language;
}

const { language } = Astro.props;

const letter = getLetter(language);
---

<div class="max-w-[40rem] mx-auto px-12">
    <Title text={letter.title} />
    <Subtitle text={letter.subtitle} />
    <AuthorText lines={letter.authorText} />
    <Intro text={letter.intro} />
    <Body {language} />
</div>
