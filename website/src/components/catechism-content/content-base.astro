---
import {
    ArticleParagraph          as ArticleParagraphObject,
    Content                   as ContentEnum,
    ContentBase,
    Language,
    Article                   as ArticleObject,
    BlockQuote                as BlockQuoteObject,
    Chapter                   as ChapterObject,
    InBrief                   as InBriefObject,
    Paragraph                 as ParagraphObject,
    ParagraphGroup            as ParagraphGroupObject,
    ParagraphSubitem          as ParagraphSubitemObject,
    ParagraphSubitemContainer as ParagraphSubitemContainerObject,
    Part                      as PartObject,
    Prologue                  as PrologueObject,
    Section                   as SectionObject,
    Subarticle                as SubarticleObject,
    TextBlock                 as TextBlockObject,
    TextHeading               as TextHeadingObject,
    TextWrapper               as TextWrapperObject,
} from '@catechism/source/types/types';
import {
    isArticle,
    isArticleParagraph,
    isBlockQuote,
    isChapter,
    isInBrief,
    isParagraph,
    isParagraphGroup,
    isParagraphSubitem,
    isParagraphSubitemContainer,
    isPart,
    isPrologue,
    isSection,
    isSubarticle,
    isTextBlock,
    isTextHeading,
    isTextWrapper,
} from '@catechism/source/utils/content';

import ArticleParagraph          from './article-paragraph.astro';
import Article                   from './article.astro';
import BlockQuote                from './block-quote.astro';
import Chapter                   from './chapter.astro';
import InBrief                   from './in-brief.astro';
import ParagraphGroup            from './paragraph-group.astro';
import ParagraphSubitemContainer from './paragraph-subitem-container.astro';
import ParagraphSubitem          from './paragraph-subitem.astro';
import Paragraph                 from './paragraph.astro';
import Part                      from './part.astro';
import Prologue                  from './prologue.astro';
import Section                   from './section.astro';
import Subarticle                from './subarticle.astro';
import TextBlock                 from './text-block.astro';
import TextHeading               from './text-heading.astro';
import TextWrapper               from './text-wrapper.astro';
import UnknownContent            from './unknown-content.astro';

interface Props {
    content: ContentBase;
    language: Language;
}

const { content, language } = Astro.props;
const isUnknownContent = !Object.values(ContentEnum).includes(content.contentType);
---

{isUnknownContent && <UnknownContent content={content} />}

{isArticle(content)                   && <Article                   language={language} article={content} />}
{isArticleParagraph(content)          && <ArticleParagraph          language={language} articleParagraph={content} />}
{isBlockQuote(content)                && <BlockQuote                language={language} blockQuote={content} />}
{isChapter(content)                   && <Chapter                   language={language} chapter={content} />}
{isInBrief(content)                   && <InBrief                   language={language} inBrief={content} />}
{isParagraph(content)                 && <Paragraph                 language={language} paragraph={content} />}
{isParagraphGroup(content)            && <ParagraphGroup            language={language} paragraphGroup={content} />}
{isParagraphSubitemContainer(content) && <ParagraphSubitemContainer language={language} paragraphSubitemContainer={content} />}
{isParagraphSubitem(content)          && <ParagraphSubitem          language={language} paragraphSubitem={content} />}
{isPart(content)                      && <Part                      language={language} part={content} />}
{isPrologue(content)                  && <Prologue                  language={language} prologue={content} />}
{isSection(content)                   && <Section                   language={language} section={content} />}
{isSubarticle(content)                && <Subarticle                language={language} subarticle={content} />}
{isTextBlock(content)                 && <TextBlock                 language={language} textBlock={content} />}
{isTextHeading(content)               && <TextHeading                                   textHeading={content} />}
{isTextWrapper(content)               && <TextWrapper               language={language} textWrapper={content} />}
