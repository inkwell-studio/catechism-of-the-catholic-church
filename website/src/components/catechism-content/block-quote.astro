---
import { BlockQuote, Language } from '@catechism/source/types/types';
import { getAllChildContent } from '@catechism/source/utils/content';

import ContentBaseArray from './content-base-array.astro';

interface Props {
    blockQuote: BlockQuote;
    language: Language;
}

const { blockQuote, language } = Astro.props;
const childContent = getAllChildContent(blockQuote);
---

<blockquote class="px-8 mb-4">
    <ContentBaseArray content={childContent} language={language} />
</blockquote>
