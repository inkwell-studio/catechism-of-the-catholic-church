---
import Home from '@components/home/home.astro';
import BaseLayout from '@layouts/base-layout.astro';

import { ContentRoute, getHomePageRoutes } from '@pages/_routes';

export function getStaticPaths(): Array<ContentRoute> {
    return getHomePageRoutes();
}

const language = Astro.params.language;
---

<BaseLayout {language}>
    <Home {language} />
</BaseLayout>
