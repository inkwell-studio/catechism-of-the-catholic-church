{
    "compilerOptions": {
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@artifacts/*": ["../catechism/artifacts/*"],
            "@catechism-types": ["../catechism/source/types/types.ts"],
            "@catechism-utils/*": ["../catechism/source/utils/*"],
            "@components/*": ["./source/components/*"],
            "@globalCss": ["./source/global.css"],
            "@layouts/*": ["./source/layouts/*"],
            "@logic/*": ["./source/logic/*"],
            "@pages/*": ["./source/pages/*"],

            "@std/*": ["node_modules/@std/*/mod.ts"]
        }
    },
    // This is set only for the sake of the `astro check` command (see `deno.json`).
    "include": [
        "**/*.astro"
    ]
}
