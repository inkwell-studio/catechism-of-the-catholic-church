---
interface Props {
    href: string;
    mode: 'primary' | 'secondary';
}

const { href, mode } = Astro.props;

// deno-fmt-ignore
const modeClasses = mode === 'primary'

    ? `bg-sky-500 text-sky-50
        shadow-lg shadow-sky-800/30
        transition-all duration-200
        hover:shadow-xl
        hover:text-white hover:scale-105
        active:scale-98 active:bg-sky-600 active:text-white
        dark:bg-arctic-600 dark:text-zinc-50 dark:shadow-zinc-800
        dark:hover:text-white dark:active:bg-arctic-700 dark:active:text-white`

    : `border-2 border-sky-600/20 text-sky-700
        transition-all duration-300
        hover:bg-sky-600 hover:text-sky-50 hover:shadow-lg hover:shadow-sky-800/30
        active:scale-98 active:bg-sky-800 active:text-white active:border-sky-800
        dark:border-arctic-700/70 dark:text-zinc-200
        dark:hover:bg-arctic-800 dark:hover:border-arctic-800`
---

<a
    {href}
    class:list={[
        'max-w-100 font-sans font-bold text-base text-center tracking-[0.2rem] uppercase p-6 rounded-sm',
        modeClasses,
    ]}
>
    <slot />
</a>
