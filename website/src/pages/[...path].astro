---
import { DEFAULT_LANGUAGE } from '@catechism/source/types/types';
import BaseLayout from '@layouts/base.astro';

import { getTableOfContentsUrls } from './_utils';

export function getStaticPaths() {
    return getTableOfContentsUrls('onlyDefaultLanguage').map(({ language, url }) => ({ params: { path: url } }));
}

const path = Astro.params.path;
---

<BaseLayout language={DEFAULT_LANGUAGE}>
    <div class="flex flex-col p-48 gap-4">
        <div class="text-xl font-bold font-mono">[ default language ]</div>
        <div class="border-t border-stone-400 dark:border-slate-400"></div>
        <div class="font-mono">{path}</div>
    </div>
</BaseLayout>
