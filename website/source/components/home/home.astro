---
import { Language } from '@catechism-types';

import Section from '@components/home/section.astro';
import TableOfContents from '@components/home/table-of-contents.astro';
import Title from '@components/home/title.astro';

import { CATECHISM_OF_THE_CATHOLIC_CHURCH } from '@logic/strings';

interface Props {
    language: Language;
}

const { language } = Astro.props;
---

<div class="relative h-[70vh] flex justify-center pt-[30vh] drop-shadow-lg drop-shadow-stone-700">
    <Title {language} />
</div>

<main class="relative flex flex-col items-stretch gap-20 max-w-6xl mx-auto pb-16 px-8">
    <a
        href="/project"
        class="self-center flex justify-center bg-white/40 text-stone-800 font-sans font-bold tracking-[0.3rem] uppercase p-6 border-4 border-white rounded-xl shadow-xl shadow-white/50"
    >
        About the project
    </a>

    <Section title="About">
        To do ...
    </Section>

    <Section title="Apostolic Documents">
        <ul class="mt-4 space-y-8">
            <li>
                <a href="./apostolic-letter">
                    <h2 class="text-2xl font-bold font-sans mb-0.5">Laetamur magnopere</h2>
                    <div>
                        Apostolic Letter on the approval and promulgation of the Latin typical edition of the <em class="italic">{
                            CATECHISM_OF_THE_CATHOLIC_CHURCH
                        }</em>.
                    </div>
                </a>
            </li>
            <li>
                <a href="./apostolic-constitution">
                    <h2 class="text-2xl font-bold font-sans mb-0.5">Fidei Depositum</h2>
                    <div>
                        Apostolic Constitution on the publication of the <em class="italic">{CATECHISM_OF_THE_CATHOLIC_CHURCH}</em>.
                    </div>
                </a>
            </li>
        </ul>
    </Section>

    <Section>
        <TableOfContents {language} />
    </Section>
</main>
