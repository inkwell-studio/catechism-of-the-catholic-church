---
import { BlockQuote as BlockQuoteType, Language } from '@catechism-types';
import { getAllChildContent } from '@catechism-utils/content';

import ContentBaseArray from './content-base-array.astro';

interface Props {
    blockQuote: BlockQuoteType;
    language: Language;
}

const { blockQuote, language } = Astro.props;
const childContent = getAllChildContent(blockQuote);
---

<blockquote class="px-8 mb-4">
    <ContentBaseArray content={childContent} {language} />
</blockquote>
