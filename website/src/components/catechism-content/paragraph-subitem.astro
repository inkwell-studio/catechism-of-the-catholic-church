---
import { Language, ParagraphSubitem } from '@catechism/source/types/types';
import { getAllChildContent } from '@catechism/source/utils/content';

import TextWrapperArray from './text-wrapper-array.astro';

interface Props {
    paragraphSubitem: ParagraphSubitem;
    language: Language;
}

const { paragraphSubitem, language } = Astro.props;

const childContent = getAllChildContent(paragraphSubitem);
---

<li>
    <TextWrapperArray content={childContent} language={language} />
</li>
