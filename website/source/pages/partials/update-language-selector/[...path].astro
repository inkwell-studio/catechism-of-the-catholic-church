---
import { getNavigationValues } from '@logic/routing';
import { ContentRoute, getAuxiliaryRoutes, getTableOfContentsRoutes } from '@pages/_routes';

import LanguageSelector from '@components/toolbar/menu/language-selector.astro';

export const partial = true;

export async function getStaticPaths(): Promise<Array<ContentRoute>> {
    return [...getAuxiliaryRoutes(), ...(await getTableOfContentsRoutes())];
}

const { language } = await getNavigationValues(Astro.params.path);
---

<LanguageSelector currentLanguage={language} />
