---
import Glossary from '@components/glossary.astro';
import BaseLayout from '@layouts/base-layout.astro';
import { Slot } from '@logic/ui';
import { ContentRoute, getLandingPageRoutes } from '@pages/_routes';

export function getStaticPaths(): Array<ContentRoute> {
    return getLandingPageRoutes();
}

const language = Astro.params.language;
---

<BaseLayout language={language}>
    <Glossary slot={Slot.CONTENT} language={language} />
</BaseLayout>
