---
import { Language } from '@catechism-types';

import Menu from './menu/menu.astro';

interface Props {
    language: Language;
}

const { language } = Astro.props;
---

<div class="flex items-center gap-4 max-w-lg w-full p-2 bg-stone-900 text-slate-50 font-sans rounded-t-lg">
    <!-- table of contents -->
    <div>
        <!-- from https://heroicons.com/ : book-open -->
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"
            />
        </svg>
    </div>

    <!-- hierarchical navigation -->
    <div class="grow">hierarchy > menu</div>

    <!-- search -->
    <div>
        <!-- from https://heroicons.com/ : magnifying-glass -->
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5">
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
            />
        </svg>
    </div>

    <Menu {language} />
</div>
