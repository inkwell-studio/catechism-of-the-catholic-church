---
import { DEFAULT_LANGUAGE } from '@catechism/source/types/types';

import BaseLayout from '@layouts/base.astro';
import ContentDemo from '@components/content-demo.astro';

import { getTableOfContentsUrls } from '../logic/artifacts';

export function getStaticPaths() {
    return getTableOfContentsUrls('onlyDefaultLanguage').map(({ language, url }) => ({ params: { path: url } }));
}

const path = Astro.params.path;
---

<BaseLayout language={DEFAULT_LANGUAGE}>
    <ContentDemo path={path} language={DEFAULT_LANGUAGE} />
</BaseLayout>
