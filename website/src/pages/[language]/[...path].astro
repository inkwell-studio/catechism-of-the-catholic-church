---
import BaseLayout from '@layouts/base.astro';
import ContentDemo from '@components/content-demo.astro';

import { getTableOfContentsUrls } from '../../logic/artifacts';

export function getStaticPaths() {
    return getTableOfContentsUrls('excludeDefaultLanguage').map(({ language, url }) => ({ params: { language, path: url } }));
}

const language = Astro.params.language;
const path = Astro.params.path;
---

<BaseLayout language={language}>
    <ContentDemo path={path} language={language} />
</BaseLayout>
